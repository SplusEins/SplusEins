{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "lib": ["es2017", "es2018", "esnext"],
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
    },
    "strict": true,
    // TODO remove these
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
  },
  "exclude": [
    "node_modules"
  ]
}
