{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":separateMajorReleases",
    "helpers:pinGitHubActionDigests",
    "schedule:weekends"
  ],
  "ignorePaths": ["app/**"],
  "packageRules": [
    {
      "matchPackageNames": [
        "vue",
        "nuxt",
        "webpack",
        "nuxt-route-meta",
        "ts-loader"
      ],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
