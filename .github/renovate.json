{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":separateMajorReleases",
    ":approveMajorUpdates",
    "helpers:pinGitHubActionDigests",
    "schedule:weekends",
    ":automergePatch",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergePr"
  ],
  "platformAutomerge": true,
  "automergeSchedule": [
    "after 2pm on Saturday"
  ],
  "ignorePaths": ["app/**"],
  "packageRules": [
    {
      "matchPackageNames": [
        "vue",
        "nuxt",
        "webpack"
      ],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
